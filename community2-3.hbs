{{> site-header}}

<div class="inner">
  <img src="http://www.mymarianas.cn/Public/assets/images/zbanner.jpg" alt="">
</div>

<div class="inner">
  <div class="s-list">
    <ul>
      <li>分类</li>
      <li><a href="#a2">酒店</a></li>
    </ul>
  </div>

  <div class="s-info" id="a1">
    <h3>塞班 · 酒店</h3>
    <ul class="clearfix">
      <li data-id="38">
          <img src="{{asset 'news/1531055304.png'}}" alt="">
          <p><span>Valentino Hotel</span></p>
      </li><li data-id="37">
          <img src="{{asset 'news/1531054895.png'}}" alt="">
          <p><span>罗塔度假乡村俱乐部</span></p>
