{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{> site-header}}

<style>
  .u-flex {
    display: flex;
  }

  .u-flex1 {
    flex: 1;
  }

  .u-flex-center {
    align-items: center;
    justify-content: center;
  }

  .u-width-full {
    width: 100%;
  }

  p {
    margin: 0;
  }
  ul li {
    margin: 0;
    padding: 0;
    list-style: none;
  }
</style>

<div class="dtt-list clearfix inner">
  <ul class="u-flex u-flex-center">
    <li class="u-flex1" style="position:relative;"><a href="#"><img src="{{asset 'banner/1532572879.png'}}" alt="" style="height:650px;">
      <div style="font-size: 32px;font-weight:bold;position:absolute;color:white;bottom: 25px;left: 30px;"><p>2018塞班马拉松等你来挑战</p></div></a>
    </li>
    <li class="u-flex1"><a href="#"><img src="{{asset 'banner/1528270573.jpg'}}" alt="" style="height:650px;">
      <div class="wenzi"><p></p></div>
    </a></li>
  </ul>
</div>

<div class="inner u-flex u-flex-center" style="padding:70px 0;">
  <img src="{{asset 'imgs/my.jpg'}}" alt="">
</div>

<div class="inner u-flex" style="margin-top: 100px;">
  <div class="u-flex1">
    <div class="u-flex" style="align-items: center;height: 40px;">
      <h2 style="margin: 0;">最新动态</h2>
      <span>&nbsp;&nbsp;News</span>
    </div>
    <br>
    <ul style="list-style:none;padding:0;">
      {{#foreach posts}}
        <li style="height: 50px;">
          <a href="{{url}}" class="u-flex u-flex-center" style="cursor:pointer;color:initial;text-decoration:none!important;">
            <p style="width:20px;height:20px;background:#0283ad;color:white;line-height:20px;text-align:center;">{{@number}}</p>
            <p class="u-flex1" style="margin:0 20px;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;">{{title}}</p>
            <p style="font-size: 12px;color:#bbb;">{{date format='YYYY-MM-DD'}}</p>
          </a>
        </li>
      {{/foreach}}
    </ul>
  </div>
</div>

<div class="inner u-flex" style="margin-bottom: 50px;">
  <p class="u-flex1"></p>
  {{pagination}}
</div>
